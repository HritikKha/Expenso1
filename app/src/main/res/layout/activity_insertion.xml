<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

       <LinearLayout
        android:id="@+id/toolbarLinear"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#445E75"
        android:orientation="vertical">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="27dp"
            android:text="Add\nIncome"
            android:background="#445E75"
            android:textColor="#FAFAFA"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>


    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="numberDecimal"
        android:padding="20dp"
        android:textColor="@color/black" />


    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/black" />


    <Spinner
        android:id="@+id/categorySpinnerInsertion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="20dp"
        android:backgroundTint="#ECECEC"
        android:textColor="#445E75"
        android:textSize="16sp"
        android:popupBackground="#ECECEC"
        android:dropDownVerticalOffset="10dp"
        android:dropDownHorizontalOffset="10dp"
        android:dropDownWidth="match_parent"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/locationButtonInsertion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Get Location"
        android:backgroundTint="#4a586a"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:padding="15dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4a586a"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:cornerRadius="20dp" />
</LinearLayout>
